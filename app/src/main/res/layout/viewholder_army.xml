<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/unit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">
            <TextView
                android:id="@+id/unit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sample name"
                android:textSize="25sp"
                android:textColor="#555"/>
            <View
                android:id="@+id/header_divier"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#444"/>
            <LinearLayout
                android:id="@+id/parameters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/hp_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hp: 5/5"
                    android:textColor="#f00"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/atk_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atk:3"
                    android:textColor="#555"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/def_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Def:4"
                    android:textColor="#555"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/equipment_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/weapon_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weapon: yes"
                    android:textColor="#333"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/armor_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Armor:No"
                    android:textColor="#333"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>